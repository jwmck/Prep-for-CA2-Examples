@page
@model TestApp1.Pages.GeographyModelModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "GeographyModel";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Geography Model </title>
</head>
<body>
    <h1>Geography Choices</h1>
    <form method="post">

        <fieldset>
            <legend>Pick all the provinces you like</legend>

            @for (int i = 0; i < @Model.ProvinceChoice.Length; i++)
            {
                <input asp-for=ProvinceChoice[i] />
                <label asp-for=ProvinceChoice[i]>@Model.ProvinceList[i]</label>
            }
        </fieldset>

        <select asp-for=ChosenCounties>
            @foreach (string county in @Model.CountyList)
            {
                <option>@county</option>
            }

        </select>

        <button type="submit">Press Me to see what happens</button>
    </form>
    <ul>
        @for (int i = 0; i < @Model.ProvinceChoice.Length; i++)
        {
            if (@Model.ProvinceChoice[i])
            {
                <li> @Model.ProvinceList[i] </li>

            }

        }
    </ul>

    <h3>@Model.Message</h3>



</body>
</html>

